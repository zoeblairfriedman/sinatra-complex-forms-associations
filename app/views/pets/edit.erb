<h1>Update Pet</h1>


<form action="/pets" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  <label>Pet Name:</label>
  <br>
  <input id= "pet_name" type="text" name="pet[name]">

  <br>
  <p>Select an existing owner or create a new one below.</p>


  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id][]" id="<%= owner.id %>" value="<%= owner.id %>"><%= 'checked' if owner.pets.include?(@pet) %></input><br>
    <% end %>
  <br>

  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>

  <input type="submit" value="Update Pet">
</form>
